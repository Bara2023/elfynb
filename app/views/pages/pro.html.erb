

<div class="container">
    <div class="row mt-5">

        <!-- Colonne pour My Elves -->
        <div class="col-md-6">
        <div class="cards">
        <div class="card-category rounded-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('elf_vert.webp') %>)">
        Mes elfs
      </div>

      <% @elves.each do |elf| %>
        <%= link_to elf_path(elf), class: "text-decoration-none text-black" do %>
          <div class="card-elf rounded-3">
            <%= cl_image_tag(elf.photo.key, crop: :thumb, gravity: :face) %>
            <div class="card-elf-infos w-100">

              <div class="d-flex justify-content-between">
                <div>
                  <h2> <%= elf.name %></h2>
                  <p><%= truncate(elf.description, length: 30, separator: ' ')%></p>
                 </div>
                   <div>
                  <p><%= elf.age %> ans</p>
                  <p><%= elf.daily_price %>€/Jour</p>
                </div>
              </div>
            </div>

          </div>
        <% end %>
        <% end %>
      </div>
      </div>

<%# BOOKINGS %>
   <div class="col-md-6">
           <div class="cards">
              <div class="card-category rounded-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://c8.alamy.com/compfr/t34g0n/maisons-d-elf-en-forme-de-champignons-t34g0n.jpg)">
                 Mes réservations
                  </div>
                      <% @bookings.each do |booking| %>
                      <%= link_to elf_path(booking.elf), class: "text-decoration-none text-black" do %>
                       <div class="card-elf rounded-3">
                          <%= cl_image_tag(booking.elf.photo.key, crop: :thumb, gravity: :face) %>
                          <div class="card-elf-infos w-100">
                                <h2> <%= booking.elf.name %></h2>
                            <div class="d-flex justify-content-between">
                              <div>
                                <p><strong>du</strong> <%= booking.start_date %></p>
                                <p><strong>au</strong> <%= booking.end_date %></p>
                              </div>
                              <div>
                                <p>Total</p>
                                <p><%= booking.total_price %>€</p>
                              </div>
                            </div>
                          </div>
                    </div>
               <% end %>
            <% end %>
        </div>
      </div>
  </div>
</div>
